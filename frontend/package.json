{
  "name": "frontend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "ALL RIGHTS RESERVED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --format junit --output-file ${ARTIFACT_DIR:-artifacts}/test_results/eslint/eslint.junit.xml",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "types:check": "tsc --noEmit",
    "types:watch": "tsc --noEmit --pretty --watch",
    "start": "webpack serve",
    "build": "webpack"
  },
  "lint-staged": {
    "yarn.lock": [
      "yarn dedupe --check"
    ],
    "*.ts": [
      "yarn eslint",
      "yarn jest --findRelatedTests"
    ],
    "*.{yml,yaml}": [
      "yarn yaml-validator"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@tophat/eslint-config": "^0.7.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@yarnpkg/pnpify": "^2.4.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "next",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^4.0.0-beta.0",
    "yaml-validator": "^3.0.0"
  },
  "dependencies": {
    "@frontend/app": "workspace:./packages/app"
  }
}
